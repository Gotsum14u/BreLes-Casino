<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="theme-color" content="#1e1b4b">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="BreLes Casino">
    <title>BreLes Casino - Mobile Gaming App</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><rect fill='%23f59e0b' width='100' height='100' rx='20'/><text y='70' font-size='60' text-anchor='middle' x='50'>ğŸ°</text></svg>">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @keyframes pulse-slow {
            0%, 100% { opacity: 0.2; }
            50% { opacity: 0.4; }
        }
        .animate-pulse-slow {
            animation: pulse-slow 4s ease-in-out infinite;
        }
        .scrollbar-hide::-webkit-scrollbar { display: none; }
        .scrollbar-hide {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
        body {
            overscroll-behavior-y: contain;
            -webkit-overflow-scrolling: touch;
        }
        * {
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
            -webkit-tap-highlight-color: transparent;
        }
        input, textarea {
            -webkit-user-select: text;
            -moz-user-select: text;
            user-select: text;
        }
        @keyframes bounce-in {
            0% { transform: scale(0.9); opacity: 0; }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); opacity: 1; }
        }
        .bounce-in {
            animation: bounce-in 0.4s ease;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 text-white min-h-screen overflow-x-hidden">
    
    <!-- Install Prompt Banner -->
    <div id="installBanner" class="hidden fixed top-0 left-0 right-0 z-50 bg-gradient-to-r from-yellow-400 to-orange-500 text-black p-4 shadow-lg">
        <div class="flex items-center justify-between max-w-7xl mx-auto">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center text-2xl">ğŸ°</div>
                <div>
                    <p class="font-bold text-sm">Install BreLes Casino</p>
                    <p class="text-xs opacity-90">Add to home screen for quick access</p>
                </div>
            </div>
            <div class="flex gap-2">
                <button onclick="installApp()" class="px-4 py-2 bg-black text-white rounded-lg font-bold text-sm">Install</button>
                <button onclick="dismissInstall()" class="px-3 py-2 bg-black/20 rounded-lg text-sm">âœ•</button>
            </div>
        </div>
    </div>

    <!-- Splash Screen -->
    <div id="splashScreen" class="fixed inset-0 bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 z-50 flex items-center justify-center">
        <div class="text-center">
            <div class="w-24 h-24 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-3xl flex items-center justify-center mb-4 mx-auto animate-pulse text-5xl">ğŸ°</div>
            <h1 class="text-4xl font-bold bg-gradient-to-r from-yellow-400 to-orange-500 bg-clip-text text-transparent mb-2">BreLes Casino</h1>
            <p class="text-gray-400">Loading your gaming experience...</p>
            <div class="mt-6 flex justify-center gap-2">
                <div class="w-2 h-2 bg-yellow-400 rounded-full animate-bounce"></div>
                <div class="w-2 h-2 bg-orange-400 rounded-full animate-bounce" style="animation-delay: 0.1s"></div>
                <div class="w-2 h-2 bg-pink-400 rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
            </div>
        </div>
    </div>

    <!-- Animated Background -->
    <div class="fixed inset-0 opacity-20 pointer-events-none">
        <div class="absolute top-10 left-10 w-60 h-60 bg-purple-500 rounded-full filter blur-3xl animate-pulse-slow"></div>
        <div class="absolute bottom-10 right-10 w-72 h-72 bg-pink-500 rounded-full filter blur-3xl animate-pulse-slow" style="animation-delay: 1s;"></div>
    </div>

    <!-- Header -->
    <header class="sticky top-0 z-40 bg-black/90 backdrop-blur-xl border-b border-white/10">
        <div class="flex items-center justify-between px-4 py-3 max-w-7xl mx-auto">
            <div class="flex items-center space-x-2">
                <div class="w-10 h-10 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-xl flex items-center justify-center shadow-lg text-2xl">ğŸ°</div>
                <div>
                    <h1 class="text-lg font-bold bg-gradient-to-r from-yellow-400 to-orange-500 bg-clip-text text-transparent">BreLes Casino</h1>
                    <p class="text-xs text-gray-400">ğŸ’° Balance: $<span id="balance">1000</span></p>
                </div>
            </div>
            <button onclick="showNotification()" class="relative p-2 hover:bg-white/10 rounded-lg transition-colors">
                <span class="text-2xl">ğŸ””</span>
                <span class="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
            </button>
        </div>
    </header>

    <!-- Main Content -->
    <main id="appContent" class="relative z-10 px-4 py-6 space-y-6 max-w-7xl mx-auto pb-24">
        
        <!-- Welcome Banner -->
        <div class="bg-gradient-to-r from-yellow-400/20 to-orange-500/20 border border-yellow-400/50 rounded-2xl p-4 backdrop-blur-sm bounce-in">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div>
                    <p class="text-yellow-400 font-bold text-sm mb-1">ğŸ‰ Welcome Bonus</p>
                    <p class="text-2xl font-bold">200% up to $1,000</p>
                </div>
                <button onclick="claimBonus()" class="px-6 py-2 bg-gradient-to-r from-yellow-400 to-orange-500 rounded-full font-bold text-black text-sm whitespace-nowrap active:scale-95 transition-transform">Claim Now</button>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="grid grid-cols-4 gap-3">
            <button onclick="quickPlay('slots')" class="bg-gradient-to-br from-purple-600/30 to-pink-600/30 backdrop-blur-sm rounded-xl p-3 border border-white/10 active:scale-95 transition-transform">
                <div class="text-3xl mb-1">ğŸ°</div>
                <p class="text-xs font-medium">Slots</p>
            </button>
            <button onclick="quickPlay('cards')" class="bg-gradient-to-br from-blue-600/30 to-cyan-600/30 backdrop-blur-sm rounded-xl p-3 border border-white/10 active:scale-95 transition-transform">
                <div class="text-3xl mb-1">ğŸƒ</div>
                <p class="text-xs font-medium">Cards</p>
            </button>
            <button onclick="quickPlay('roulette')" class="bg-gradient-to-br from-red-600/30 to-orange-600/30 backdrop-blur-sm rounded-xl p-3 border border-white/10 active:scale-95 transition-transform">
                <div class="text-3xl mb-1">ğŸ¯</div>
                <p class="text-xs font-medium">Roulette</p>
            </button>
            <button onclick="quickPlay('dice')" class="bg-gradient-to-br from-green-600/30 to-emerald-600/30 backdrop-blur-sm rounded-xl p-3 border border-white/10 active:scale-95 transition-transform">
                <div class="text-3xl mb-1">ğŸ²</div>
                <p class="text-xs font-medium">Dice</p>
            </button>
        </div>

        <!-- Slot Machine -->
        <div class="bg-gradient-to-br from-purple-600/40 to-pink-600/40 backdrop-blur-xl rounded-3xl p-6 border-2 border-yellow-400/30 shadow-2xl">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-bold">ğŸ° Slot Machine</h3>
                <div class="text-sm bg-black/30 px-3 py-1 rounded-full">Bet: $<span id="betAmount">10</span></div>
            </div>
            
            <div class="flex justify-center space-x-3 mb-6">
                <div id="slot1" class="w-20 h-24 bg-black/70 rounded-xl flex items-center justify-center text-4xl border-2 border-yellow-400/50 shadow-lg">ğŸ°</div>
                <div id="slot2" class="w-20 h-24 bg-black/70 rounded-xl flex items-center justify-center text-4xl border-2 border-yellow-400/50 shadow-lg">ğŸ°</div>
                <div id="slot3" class="w-20 h-24 bg-black/70 rounded-xl flex items-center justify-center text-4xl border-2 border-yellow-400/50 shadow-lg">ğŸ°</div>
            </div>

            <div class="flex items-center justify-center gap-3 mb-4">
                <button onclick="adjustBet(-5)" class="w-10 h-10 bg-white/10 rounded-lg font-bold active:scale-95 transition-transform">-</button>
                <div class="text-center">
                    <p class="text-xs text-gray-400">Bet Amount</p>
                    <p class="text-2xl font-bold text-yellow-400">$<span id="betDisplay">10</span></p>
                </div>
                <button onclick="adjustBet(5)" class="w-10 h-10 bg-white/10 rounded-lg font-bold active:scale-95 transition-transform">+</button>
            </div>

            <button id="spinButton" onclick="spinSlots()" class="w-full py-4 bg-gradient-to-r from-yellow-400 to-orange-500 rounded-xl font-bold text-black text-lg active:scale-95 transition-transform shadow-lg">SPIN</button>
            <p id="resultText" class="text-center mt-4 text-lg font-bold min-h-6"></p>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-3">
            <div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 text-center">
                <p class="text-2xl font-bold text-green-400">$<span id="totalWon">0</span></p>
                <p class="text-xs text-gray-400 mt-1">Total Won</p>
            </div>
            <div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 text-center">
                <p class="text-2xl font-bold text-blue-400"><span id="gamesPlayed">0</span></p>
                <p class="text-xs text-gray-400 mt-1">Games</p>
            </div>
            <div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 text-center">
                <p class="text-2xl font-bold text-purple-400"><span id="winStreak">0</span></p>
                <p class="text-xs text-gray-400 mt-1">Win Streak</p>
            </div>
        </div>
    </main>

    <!-- Bottom Navigation -->
    <nav class="fixed bottom-0 left-0 right-0 bg-black/95 backdrop-blur-xl border-t border-white/10 z-40">
        <div class="grid grid-cols-5 gap-1 px-2 py-2 max-w-7xl mx-auto">
            <button onclick="setActiveTab('home')" id="tab-home" class="flex flex-col items-center py-2 px-1 rounded-lg transition-colors text-yellow-400 bg-yellow-400/10">
                <span class="text-xl mb-1">ğŸ </span>
                <span class="text-xs font-medium">Home</span>
            </button>
            <button onclick="setActiveTab('games')" id="tab-games" class="flex flex-col items-center py-2 px-1 rounded-lg transition-colors text-gray-400">
                <span class="text-xl mb-1">ğŸ®</span>
                <span class="text-xs font-medium">Games</span>
            </button>
            <button onclick="setActiveTab('wallet')" id="tab-wallet" class="flex flex-col items-center py-2 px-1 rounded-lg transition-colors text-gray-400">
                <span class="text-xl mb-1">ğŸ’³</span>
                <span class="text-xs font-medium">Wallet</span>
            </button>
            <button onclick="setActiveTab('vip')" id="tab-vip" class="flex flex-col items-center py-2 px-1 rounded-lg transition-colors text-gray-400">
                <span class="text-xl mb-1">ğŸ‘‘</span>
                <span class="text-xs font-medium">VIP</span>
            </button>
            <button onclick="setActiveTab('profile')" id="tab-profile" class="flex flex-col items-center py-2 px-1 rounded-lg transition-colors text-gray-400">
                <span class="text-xl mb-1">ğŸ‘¤</span>
                <span class="text-xs font-medium">Profile</span>
            </button>
        </div>
    </nav>

    <script>
        // App State
        let balance = 1000;
        let betAmount = 10;
        let totalWon = 0;
        let gamesPlayed = 0;
        let winStreak = 0;
        let spinning = false;
        let deferredPrompt;

        // Hide splash screen
        window.addEventListener('load', () => {
            setTimeout(() => {
                document.getElementById('splashScreen').style.opacity = '0';
                setTimeout(() => {
                    document.getElementById('splashScreen').style.display = 'none';
                }, 300);
            }, 1500);
        });

        // PWA Install
        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
            document.getElementById('installBanner').classList.remove('hidden');
        });

        function installApp() {
            if (deferredPrompt) {
                deferredPrompt.prompt();
                deferredPrompt.userChoice.then((choiceResult) => {
                    if (choiceResult.outcome === 'accepted') {
                        showToast('App installed successfully! ğŸ‰');
                    }
                    deferredPrompt = null;
                    document.getElementById('installBanner').classList.add('hidden');
                });
            }
        }

        function dismissInstall() {
            document.getElementById('installBanner').classList.add('hidden');
        }

        // Navigation
        function setActiveTab(tabName) {
            const tabs = ['home', 'games', 'wallet', 'vip', 'profile'];
            tabs.forEach(tab => {
                const element = document.getElementById(`tab-${tab}`);
                if (tab === tabName) {
                    element.classList.remove('text-gray-400');
                    element.classList.add('text-yellow-400', 'bg-yellow-400/10');
                } else {
                    element.classList.remove('text-yellow-400', 'bg-yellow-400/10');
                    element.classList.add('text-gray-400');
                }
            });
            
            if (tabName !== 'home') {
                showToast(`${tabName.charAt(0).toUpperCase() + tabName.slice(1)} - Coming soon!`);
            }
        }

        // Bet Management
        function adjustBet(amount) {
            betAmount = Math.max(5, Math.min(balance, betAmount + amount));
            document.getElementById('betAmount').textContent = betAmount;
            document.getElementById('betDisplay').textContent = betAmount;
            navigator.vibrate && navigator.vibrate(10);
        }

        // Slot Machine
        const symbols = ['ğŸ’', 'ğŸ‹', 'ğŸŠ', 'ğŸ‡', 'â­', 'ğŸ’', '7ï¸âƒ£'];

        function spinSlots() {
            if (spinning || balance < betAmount) {
                if (balance < betAmount) showToast('Insufficient balance! ğŸ’¸');
                return;
            }

            spinning = true;
            const button = document.getElementById('spinButton');
            const resultText = document.getElementById('resultText');
            
            button.disabled = true;
            button.textContent = 'SPINNING...';
            resultText.textContent = '';
            navigator.vibrate && navigator.vibrate([50, 100, 50]);

            let spins = 0;
            const spinInterval = setInterval(() => {
                document.getElementById('slot1').textContent = symbols[Math.floor(Math.random() * symbols.length)];
                document.getElementById('slot2').textContent = symbols[Math.floor(Math.random() * symbols.length)];
                document.getElementById('slot3').textContent = symbols[Math.floor(Math.random() * symbols.length)];
                spins++;

                if (spins >= 20) {
                    clearInterval(spinInterval);
                    
                    const slot1 = symbols[Math.floor(Math.random() * symbols.length)];
                    const slot2 = symbols[Math.floor(Math.random() * symbols.length)];
                    const slot3 = symbols[Math.floor(Math.random() * symbols.length)];
                    
                    document.getElementById('slot1').textContent = slot1;
                    document.getElementById('slot2').textContent = slot2;
                    document.getElementById('slot3').textContent = slot3;

                    let winnings = 0;
                    let message = '';
                    
                    if (slot1 === slot2 && slot2 === slot3) {
                        if (slot1 === 'ğŸ’') {
                            winnings = betAmount * 50;
                            message = 'ğŸ‰ JACKPOT! Triple Diamonds! ğŸ’';
                            navigator.vibrate && navigator.vibrate([100, 50, 100, 50, 100]);
                        } else if (slot1 === '7ï¸âƒ£') {
                            winnings = betAmount * 25;
                            message = 'ğŸŠ Lucky Sevens!';
                            navigator.vibrate && navigator.vibrate([100, 50, 100]);
                        } else {
                            winnings = betAmount * 10;
                            message = 'âœ¨ Three of a Kind!';
                            navigator.vibrate && navigator.vibrate([50, 50, 50]);
                        }
                        winStreak++;
                    } else if (slot1 === slot2 || slot2 === slot3 || slot1 === slot3) {
                        winnings = betAmount * 2;
                        message = 'ğŸ¯ Two Match!';
                        winStreak++;
                        navigator.vibrate && navigator.vibrate(50);
                    } else {
                        message = 'ğŸ˜” No match. Try again!';
                        winStreak = 0;
                    }

                    if (winnings > 0) {
                        balance += winnings;
                        totalWon += winnings;
                        resultText.className = 'text-center mt-4 text-lg font-bold text-green-400';
                        showToast(`Won $${winnings}! ğŸŠ`);
                    } else {
                        balance -= betAmount;
                        resultText.className = 'text-center mt-4 text-lg font-bold text-gray-400';
                    }

                    gamesPlayed++;
                    updateStats();
                    resultText.textContent = message;

                    button.disabled = false;
                    button.textContent = 'SPIN';
                    spinning = false;

                    if (balance <= 0) {
                        setTimeout(() => {
                            showToast('Out of funds! Reloading balance...');
                            balance = 1000;
                            updateStats();
                        }, 2000);
                    }
                }
            }, 100);
        }

        function updateStats() {
            document.getElementById('balance').textContent = balance;
            document.getElementById('totalWon').textContent = totalWon;
            document.getElementById('gamesPlayed').textContent = gamesPlayed;
            document.getElementById('winStreak').textContent = winStreak;
        }

        function quickPlay(game) {
            navigator.vibrate && navigator.vibrate(10);
            const games = {'slots': 'ğŸ° Slots', 'cards': 'ğŸƒ Card Games', 'roulette': 'ğŸ¯ Roulette', 'dice': 'ğŸ² Dice Games'};
            showToast(`${games[game]} - Coming soon!`);
        }

        function claimBonus() {
            navigator.vibrate && navigator.vibrate([50, 100, 50]);
            balance += 500;
            updateStats();
            showToast('Bonus claimed! +$500 ğŸ‰');
        }

        function showNotification() {
            navigator.vibrate && navigator.vibrate(10);
            showToast('ğŸ You have 3 new bonuses available!');
        }

        function showToast(message) {
            const toast = document.createElement('div');
            toast.className = 'fixed top-20 left-1/2 transform -translate-x-1/2 bg-black/90 text-white px-6 py-3 rounded-full shadow-lg z-50 backdrop-blur-xl border border-white/20';
            toast.textContent = message;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.style.opacity = '0';
                toast.style.transform = 'translate(-50%, -20px)';
                toast.style.transition = 'all 0.3s ease';
                setTimeout(() => toast.remove(), 300);
            }, 2500);
        }

        document.addEventListener('click', (e) => {
            if (e.target.tagName === 'BUTTON') {
                navigator.vibrate && navigator.vibrate(10);
            }
        });
    </script>
</body>
</html>
